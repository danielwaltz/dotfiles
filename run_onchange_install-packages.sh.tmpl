#!/bin/bash

{{ if eq .chezmoi.os "linux" -}}
if command -v apt-get &> /dev/null; then
  sudo apt-get update
  for i in {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.apt }}{{ . | quote }} {{ end }}; do
    sudo apt-get install -y $i
  done
fi

if command -v dnf &> /dev/null; then
  sudo dnf install -y --best --skip-broken {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.dnf }}{{ . | quote }} {{ end }}
fi

if command -v pacman &> /dev/null; then
  if command -v paru &> /dev/null; then
    paru -Syu --needed --noconfirm {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.pacman }}{{ . | quote }} {{ end }}{{ range .packages.linux.paru }}{{ . | quote }} {{ end }}
  else
    sudo pacman -Syu --needed --noconfirm {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.pacman }}{{ . | quote }} {{ end }}
  fi
fi
{{ end -}}

{{ if eq .chezmoi.os "darwin" -}}
if ! command -v brew &> /dev/null; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

if command -v brew &> /dev/null; then
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.global -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
fi
{{ end -}}

if command -v mise &> /dev/null; then
  mise install
fi

if ! command -v pass-cli &> /dev/null; then
  curl -fsSL https://proton.me/download/pass-cli/install.sh | bash
fi
