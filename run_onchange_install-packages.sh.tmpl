#!/bin/bash

{{ if eq .chezmoi.os "linux" -}}
if command -v apt-get &> /dev/null; then
  sudo apt-get update
  for i in {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.apt }}{{ . | quote }} {{ end }}; do
    sudo apt-get install -y $i
  done
fi

if command -v dnf &> /dev/null; then
  sudo dnf install -y --best --skip-broken {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.dnf }}{{ . | quote }} {{ end }}
fi

if command -v pacman &> /dev/null; then
  if command -v paru &> /dev/null; then
    paru -Syu --needed --noconfirm {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.pacman }}{{ . | quote }} {{ end }}{{ range .packages.linux.paru }}{{ . | quote }} {{ end }}
  else
    sudo pacman -Syu --needed --noconfirm {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.pacman }}{{ . | quote }} {{ end }}
  fi
fi
{{ end -}}

{{ if eq .chezmoi.os "darwin" -}}
if ! command -v brew &> /dev/null; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

if command -v brew &> /dev/null; then
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.global -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
fi
{{ end -}}

if command -v mise &> /dev/null; then
  mise install
fi

if ! command -v pass-cli &> /dev/null; then
  curl -fsSL https://proton.me/download/pass-cli/install.sh | bash
fi

if ! pass-cli test >/dev/null 2>&1; then
  pass-cli login
fi

if pass-cli test >/dev/null 2>&1; then
  # Personal SSH
  pass-cli item view "pass://Personal/Personal SSH Key/public_key" > ~/.ssh/$(pass-cli item view "pass://Personal/Personal SSH Key/File").pub
  pass-cli item view "pass://Personal/Personal SSH Key/private_key" > ~/.ssh/$(pass-cli item view "pass://Personal/Personal SSH Key/File")
  chmod 600 ~/.ssh/$(pass-cli item view "pass://Personal/Personal SSH Key/File")
  echo "Personal SSH Key added."

  # Personal GPG
  pass-cli item view "pass://Personal/Personal GPG Key/public_key" | gpg --import
  pass-cli item view "pass://Personal/Personal GPG Key/private_key" | gpg --import
  echo "Personal GPG Key added."

  {{- if eq .chezmoi.hostname "themacbook" }}
  # Moser SSH
  pass-cli item view "pass://Moser Consulting/Moser SSH Key/public_key" > ~/.ssh/$(pass-cli item view "pass://Moser Consulting/Moser SSH Key/File").pub
  pass-cli item view "pass://Moser Consulting/Moser SSH Key/private_key" > ~/.ssh/$(pass-cli item view "pass://Moser Consulting/Moser SSH Key/File")
  chmod 600 ~/.ssh/$(pass-cli item view "pass://Moser Consulting/Moser SSH Key/File")
  echo "Moser SSH Key added."

  # Moser GPG
  pass-cli item view "pass://Moser Consulting/Moser GPG Key/public_key" | gpg --import
  pass-cli item view "pass://Moser Consulting/Moser GPG Key/private_key" | gpg --import
  echo "Moser GPG Key added."
  {{- end }}
fi
