#!/bin/bash

{{ if eq .chezmoi.os "linux" -}}
{{ if eq .chezmoi.osRelease.id "debian" }}
sudo apt-get update
for i in {{ range .packages.global }}{{ . | quote }} {{ end }}; do
  sudo apt-get install -y $i
done
{{ end -}}

{{ if eq .chezmoi.osRelease.id "cachyos" }}
paru -Syu --needed --noconfirm  {{ range .packages.global }}{{ . | quote }} {{ end }}{{ range .packages.linux.paru }}{{ . | quote }} {{ end }}
{{ end -}}
{{ end -}}

{{ if eq .chezmoi.os "darwin" -}}
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.global -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ end -}}

mise install
